@model IEnumerable<Estacionamento.Web.Models.VeiculoViewModel>

@{
    ViewData["Title"] = "Listar de Vans";
}

@if (ViewBag.Error != null)
{
    <h3 style="color:red">@ViewBag.Error</h3>
}

<h1>Listagem de Vans</h1>

<p>
    <a asp-action="Cadastrar">Registrar Entrada</a>
</p>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                   Placa do Veículo
                </th>
                <th>
                    Data de Entrada
                </th>
                <th>
                    Data de Saída
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Placa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Entrada)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Saida)
                    </td>
                    <td>
                        @if (item.Saida == null)
                        {
                            @Html.ActionLink("Saída", "Deletar", new { id=item.Id })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>Sem registros</div>
}