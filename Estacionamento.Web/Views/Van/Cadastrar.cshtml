@model Estacionamento.Web.Models.VeiculoCadastrar

@{
    ViewData["Title"] = "Cadastrar Van";
}

<style>
    .error {
        border: 1px solid;
        margin: 10px 0px;
        padding: 15px 10px 15px 50px;
        background-repeat: no-repeat;
        background-position: 10px center;
        color: #D8000C;
        background-color: #FFBABA;
        background-image: url(https://i.imgur.com/GnyDvKN.png);
    }
</style>

<h1>Cadastrar Van</h1>

<hr />

@if (@TempData["Message"] is not null)
{
    <h3 class="error"><strong>@TempData["Message"]</strong></h3>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
