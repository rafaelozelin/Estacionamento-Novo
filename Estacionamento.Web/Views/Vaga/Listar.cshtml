@model IEnumerable<Estacionamento.Web.Models.VagaListaViewModel>

@{
    ViewData["Title"] = "Listagem de Vagas";
}

<h1>Listagem de Vagas</h1>

@if (Model.Count() == 0)
{
    <p>
        <a asp-action="Cadastrar">Cadastrar Vagas</a>
    </p>
}
else
{
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Tipo da Vaga
                </th>
                <th>
                    Quantidade Total
                </th>
                <th>
                    Quantidade Restante
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoVaga)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuantidadeTotal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.QuantidadeRestante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
